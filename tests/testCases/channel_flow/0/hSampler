FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      hSampler;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            cyclic;
    }
    outlet
    {
        type            cyclic;
    }
    bottomWall
    {
        type            fixedValue;
        value           uniform  0.11;
    }
    topWall
    {
        type            fixedValue;
        //value           uniform 0.01;
        value           uniform  0;
    }
    left
    {
        type            cyclic;
    }
    right
    {
        type            cyclic;
    }
}


